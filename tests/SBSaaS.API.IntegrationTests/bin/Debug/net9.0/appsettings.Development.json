{
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information",
        "Microsoft.EntityFrameworkCore.Database.Command": "Warning"
      }
    },
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ],
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "formatter": "Serilog.Formatting.Compact.RenderedCompactJsonFormatter, Serilog.Formatting.Compact"
        }
      }
    ]
  },

  "ConnectionStrings": {
    "Postgres": "Host=localhost;Port=5432;Database=sbsaasdb;Username=postgres;Password=postgres_password_from_secrets"
  },

  "Jwt": {
    "Issuer": "https://sbsaas.local",
    "Audience": "sbsaas-clients",
    "SigningKey": "SECRET_JWT_SIGNING_KEY_REPLACE_IN_USER_SECRETS"
  },

  "Authentication": {
    "Google": {
      "ClientId": "GOOGLE_CLIENT_ID_FROM_SECRETS",
      "ClientSecret": "GOOGLE_CLIENT_SECRET_FROM_SECRETS"
    },
    "Microsoft": {
      "ClientId": "MS_CLIENT_ID_FROM_SECRETS",
      "ClientSecret": "MS_CLIENT_SECRET_FROM_SECRETS"
    }
  },

  "Minio": {
    "Endpoint": "localhost:9000",
    "AccessKey": "minioadmin_from_secrets",
    "SecretKey": "minioadmin_from_secrets",
    "UseSSL": false,
    "Bucket": "sbsaas",
    "Presign": {
      "UploadExpiresSeconds": 600,
      "DownloadExpiresSeconds": 600
    },
    "Policy": {
      "MaxSizeMB": 25,
      "AllowedMime": [ "image/png", "image/jpeg", "application/pdf" ]
    }
  },

  "Payments": {
    "Provider": "Stripe",
    "Currency": "TRY",
    "SuccessUrl": "https://app.local/pay/success",
    "CancelUrl": "https://app.local/pay/cancel"
  },
  "Stripe": {
    "SecretKey": "STRIPE_SECRET_KEY_FROM_SECRETS",
    "WebhookSecret": "STRIPE_WEBHOOK_SECRET_FROM_SECRETS",
    "PriceMap": {
      "PLAN_BASIC": "price_basic_test_id",
      "PLAN_PRO": "price_pro_test_id"
    }
  },
  "IyziCo": {
    "ApiKey": "IYZICO_API_KEY_FROM_SECRETS",
    "SecretKey": "IYZICO_SECRET_KEY_FROM_SECRETS",
    "BaseUrl": "https://sandbox-api.iyzipay.com",
    "CallbackUrl": "https://api.local/webhooks/iyzico/callback"
  },

  "Auth": {
    "ApiBaseUrl": "http://localhost:5000"
  }
}
